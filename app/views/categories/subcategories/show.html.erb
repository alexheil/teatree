<%= provide(:title, sanitize(@subcategory.title) + " " + sanitize(@category.title)) %>

<div class="wrapper">
  <div class="container">
    <div class="padding-vertical-large">
      
      <div class="mid-container">

        <div class="category-image-container link-color">
          <img class="category-thumbnail-image" src="<%= @subcategory.image %>">
          <div class="category-image-centered mid-text">
            <%= @subcategory.title %> - <%= @category.title %>
          </div>
        </div>

      </div>
      
       <div class="flex padding-top-large">
        <aside class="sidebar">
          <ul>
            <% @subcategories.each do |subcategory| %>
              <li class="inactive-sidebar-tab"><%= link_to subcategory.title, category_subcategory_path(@category, subcategory) %></li>
            <% end %>
          </ul>
        </aside>

        <main class="video-content">
          <%= render 'categories/partials/videos' %>
        </main>
      </div>

    </div>
  </div>
</div>